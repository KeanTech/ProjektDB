@{
    ViewData["Title"] = "AddToLog";
}

@model Skp_ProjektDB.Models.ProjectModel

<div class="container">
    <form asp-action="AddToLog" asp-controller="Project">
        
        <div class="list-group list-group-horizontal">
            <div class="list-group-item list-group-item-info">
                <p>Skriv i log</p>
            </div>

            <div class="list-group-item list-group-item-info">

                
                <input type="number" value="@Model.Id" name="projektId" hidden/>
                <textarea style=" height:350px; width:850px; " name="logString"></textarea>
            </div>

            <div class="list-group-item list-group-item-info">

                <input class="btn btn-outline-info bg-dark" type="submit" value="Gem"/>

            </div>

        </div>

    </form>
</div>